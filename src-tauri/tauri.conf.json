{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "CardGenerator",
    "version": "1.2.3"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "hymperlion.dev",
      "resources": [
        "json/*"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": [
            "en-US"
          ]
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "title": "cardgenerator",
        "width": 900,
        "height": 800
      }
    ],
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "readDir": true,
        "readFile": true,
        "createDir": true,
        "copyFile": true,
        "scope": [
          "$APPDATA/*",
          "$APPDATA/img/*",
          "$APPLOCALDATA/",
          "$APPLOCALDATA/*",
          "$APPLOCALDATA/img/*",
          "$RESOURCE/json/*"
        ]
      },
      "http": {
        "all": false,
        "request": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    }
  }
}
